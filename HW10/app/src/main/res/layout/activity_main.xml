<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:text="ToolBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="50dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="201304198 박원호"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/calculator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/calculator"
        android:scaleType="centerCrop"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/title" />

    <ImageButton
        android:id="@+id/convertor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/convertor"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/calculator"
        android:layout_alignTop="@id/calculator"/>

    <ImageButton
        android:id="@+id/btnMap"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/map"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/convertor"
        android:layout_alignTop="@id/calculator"/>

    <ImageButton
        android:id="@+id/memo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/memo"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/btnMap"
        android:layout_alignTop="@id/calculator"/>

    <ImageButton
        android:id="@+id/music"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/music"
        android:scaleType="centerCrop"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/memo" />

    <ImageButton
        android:id="@+id/phonebook"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/phonebook"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/music"
        android:layout_alignTop="@id/music" />

    <ImageButton
        android:id="@+id/web"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/web"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/phonebook"
        android:layout_alignTop="@id/music" />

    <ImageButton
        android:id="@+id/setting"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/setting"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/web"
        android:layout_alignTop="@id/music" />

</RelativeLayout>
